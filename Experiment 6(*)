
#include <iostream>
using namespace std;

int main() {
  int i,j,k;
  int n =5;
  for(i=1;i<=n;i++)
  {
      for(j=1;j<=n-i;j++){
      cout<<"  ";
      }
  
      for(k=1;k<=i;k++){
          cout<<"* ";
      }
      
      cout<<endl;
  }
 

    return 0;
}



#include <iostream>
using namespace std;

int main() {
  int i,j;
  int k=1;
  int n=4;
  for(i=1;i<=n;i++){
      for(j=1;j<=i;j++){
          cout<<k<<"  ";
          k++;
      }
      cout<<endl;
  }

    return 0;
}





new code

#include <iostream>
using namespace std;
int main() {
    int n =5;
    for(int i =5;i>=1;--i){
        for(int j=0;j<(5-i);++j){
            cout<<" ";
        }
        for(k=0;k<(i); ++k){
            cout<<"* ";
            
        }
        cout<<endl;
        }
        for(int i=2;i<=n-i;i++){
            for(int j=1;j<=n-1;j++){
                cout<<" ";
                
            }
            for(int k=1;k<=1;k++){
                cout<<"* ";
                
            }
            cout<<"\n";
            
        }
        return 0;
    }
 
